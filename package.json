{
  "name": "servets",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davisokoth/codereview.git"
  },
  "bugs": {
    "url": "https://github.com/davisokoth/codereview/issues"
  },
  "homepage": "https://github.com/davisokoth/codereview#readme",
  "config": {
    "azureFunctions": {
      "buildDir": "dist",
      "srcDir": "src",
      "outHandlersDir": "dist/handlers"
    }
  },
  "scripts": {
    "build": "node_modules/typescript/bin/tsc",
    "watch": "node_modules/typescript/bin/tsc -w",
    "prestart": "yarn build && func extensions install",
    "start:host": "func start",
    "start": "yarn build && yarn start:host && yarn watch",
    "build:production": "yarn prestart && yarn prune --production",
    "test": "jest --coverage --coverageDirectory=coverage/jest --coverageReporters=text"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "neo4j-driver": "^1.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^3.2.0",
    "typescript": "^3.4.3",
    "@azure/functions": "^1.0.2-beta2",
    "@types/node": "^11.13.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "nyc": "^13.3.0",
    "ts-jest": "^24.0.2",
    "tspath": "^1.3.7"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html",
      "xml"
    ],
    "report-dir": "./coverage"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "output": "coverage/junit/junit.xml",
    "usePathForSuiteName": "true"
  }
}
